<form action="/issue-tracker/create-issue/<%=id%>" method="POST" class="my-5">
    <div class="col mb-3 mx-5 my-2">
      <input type="text" class="form-control" name="title" placeholder="Issue Title" aria-label="Issue Title" required>
    </div>
    <div class="col mb-3 mx-5 my-2">
      <input type="text" class="form-control" name="author" placeholder="Author" aria-label="Author" required>
    </div>
    <div class="labels" style="display: inline-block;">
        <select class="mx-5 my-1" aria-label="Default select example">
            <option selected>Label</option>
            <option value="bugs">bugs</option>
            <option value="UI">UI</option>
            <option value="other">Other</option>
          </select>
          <div class="form-check mx-5 my-2" style="display: inline-block;">
            <input class="form-check-input" name="bugs" type="checkbox" value="bugs" id="bugs">
            <label class="form-check-label" for="Bugs">
              Bugs
            </label>
          </div>
          <div class="form-check mx-5 my-2" style="display: inline-block;">
            <input class="form-check-input" name="UI" type="checkbox" value="UI" id="UI">
            <label class="form-check-label" for="UI">
              UI
            </label>
          </div>
          <div class="form-check mx-5 my-2" style="display: inline-block;">
            <input class="form-check-input" type="checkbox" name="documentation" value="documentation" id="documentation">
            <label class="form-check-label" for="documentation">
              Documnetation
            </label>
          </div>
          <div class="form-check mx-5 my-2" style="display: inline-block;">
            <input class="form-check-input" type="checkbox" name="other" value="other" id="other">
            <label class="form-check-label" for="other">
              Other
            </label>
          </div>
    </div>
    <div class=" mx-5 my-2">
      <textarea class="form-control" name="description" placeholder="Description" id="description" aria-label="With textarea" required></textarea>
    </div>
    <button type="submit" class="btn btn-outline-danger mx-5 my-2">Create Issue</button>
  </form>


    
